@using ElsaWebApp.Models.Database
 @{ @if (User.ProfilePicture != null)
    {
        <img src="data:image/bmp;base64, @(Convert.ToBase64String(User.ProfilePicture))" alt="Profile picture" width="@PictureSize.ToString()" height="@PictureSize.ToString()"/>
    }
    else
    {
        <img src="default_image.jpg" alt="Profile picture" width="@PictureSize.ToString()" height="@PictureSize.ToString()"/>

    }
 }         

@code {
    
    [Parameter]
    public DbUser User { get; set; }

    [Parameter]
    public int PictureSize { get; set; } = 128;

}